<div class="col-4 small text-center">
    <div class="page-nav {{ ( paginator.totalPages <= 1 and not paginator.hide.pageNav ) ? 'invisible' : '' }}">
        <button class="btn btn-default btn-navbar btn-sm" id="firstPage-{{ paginator.id }}" type="button" title="{{ 'First page'|trans }}">
            <<
        </button>
        <button class="btn btn-default btn-navbar btn-sm"  id="prevPage-{{ paginator.id }}" type="button" title="{{'Previous page'|trans}}">
            <
        </button>
        <span class="btn btn-default btn-navbar btn-sm">
            <span id="actualPage-{{ paginator.id }}">{{ paginator.form.vars.value.page }}</span> {{ 'of'|trans }} <span id="totalPages-{{ paginator.id }}">{{ paginator.totalPages }}</span> {{ form_row(paginator.form.page) }}
        </span>
        <button class="btn btn-default btn-navbar btn-sm" id="nextPage-{{ paginator.id }}" type="button" title="{{ 'Next page'|trans }}">
            >
        </button>
        <button class="btn btn-default btn-navbar btn-sm" id="lastPage-{{ paginator.id }}" type="button" title="{{ 'Last page'|trans }}">
            >>
        </button>
    </div>
</div>
{{ form_row(paginator.form.clean) }}
